{
  "name": "tree-sitter-plantuml",
  "version": "2.0.0",
  "description": "PlantUML grammar for tree-sitter - Two-Pass Architecture",
  "main": "index.js",
  "types": "bindings/node/index.d.ts",
  "keywords": [
    "tree-sitter",
    "plantuml",
    "parser",
    "uml",
    "diagram",
    "normalizer",
    "activity-diagram"
  ],
  "author": "PlantUML Parser Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SaeedNMosleh/PlantUML-Parser"
  },
  "scripts": {
    "test": "npm run test:normalizer && npm run test:parser",
    "test:normalizer": "jest test/normalizer --coverage",
    "test:parser": "tree-sitter test",
    "test:integration": "jest test/integration",
    "test:all": "npm run validate && npm test && npm run test:integration",
    "test:100": "npm run test:all && echo 'âœ… 100% Success Rate Achieved!'",
    "generate": "tree-sitter generate",
    "parse": "tree-sitter parse",
    "build": "npm run generate && node-gyp rebuild",
    "clean": "rm -rf build coverage *.obj *.backup",
    "rebuild": "npm run clean && npm run build",
    "install": "node-gyp-build || echo 'Skipping build - run npm run build first'",
    "validate": "node scripts/validate-plantuml.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:validate": "npm run docker:up && npm run validate"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp-build": "^4.6.0",
    "tree-sitter": "^0.20.6",
    "tree-sitter-cli": "^0.20.8"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "c8": "^9.0.0"
  },
  "tree-sitter": [
    {
      "scope": "source.plantuml",
      "file-types": [
        "puml",
        "plantuml",
        "pu",
        "uml"
      ],
      "injection-regex": "plantuml"
    }
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "src",
    "queries",
    "bindings",
    "index.js"
  ]
}
